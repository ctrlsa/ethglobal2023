server {
  listen 8080 ssl;
  server_name filedrop.ctrl.finance;
  ssl_certificate      /etc/letsencrypt/live/filedrop.ctrl.finance/fullchain.pem;
  ssl_certificate_key  /etc/letsencrypt/live/filedrop.ctrl.finance/privkey.pem;
  ssl_prefer_server_ciphers on;

  gzip on;
  gzip_min_length     1000;
  #gzip_buffers        4 8k;
  gzip_http_version   1.1;
  gzip_disable        "msie6";
  gzip_proxied        any;
  gzip_vary on;
  gzip_types
        text/css
        text/javascript
        text/xml
        text/plain
        text/*
        application/javascript
        application/x-javascript
        application/json;

  proxy_buffering "off";
  proxy_http_version 1.1;

  location / {
    proxy_set_header  Host $host;
    proxy_set_header  X-Real-IP $remote_addr;
    proxy_set_header  X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header  X-Forwarded-Proto $scheme;

    proxy_pass  http://localhost:10773;
  }
}
